{
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],                            
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true                              
  }
}
