{
  "name": "weglot-js-assessment",
  "version": "1.0.0",
  "main": "src/index.ts",
  "private": true,
  "keywords": [],
  "author": "Steve",
  "license": "MIT",
  "scripts": {
    "test:unit": "jest test/",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test:lint": "eslint . --ext .ts",
    "test:ts": "tsc --noEmit src/**/*.ts test/**/*.ts",
    "test:lint:ts": "npm run test:lint && npm run test:ts"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "babel-jest": "^27.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint:ts"
    }
  }
}
